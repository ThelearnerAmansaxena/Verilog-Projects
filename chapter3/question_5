
`define MEM_SIZE 1024
// Code your design here
module ex_3_5_q5;
  
  //a 
  reg [3:0] latch;
  initial begin
    latch = 4'd12;
    $display("the current value of latch = %d\n",latch[3:0]);
  
  end
  
  //b
  reg [2:0] in_reg;
  initial begin
    in_reg = 3'd2;
    $monitor($time," In register value = %b\n",in_reg[2:0]);
  end

  //c
  initial begin
    $display("the maximum memory size is %h",`MEM_SIZE);
  end
  
endmodule
             
             
